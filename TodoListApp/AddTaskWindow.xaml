<Window x:Class="TodoListApp.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Task" Height="250" Width="300" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Label column -->
            <ColumnDefinition Width="*"/>
            <!-- Input column -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Title:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="TitleInput" Margin="5"/>

        <!-- Description -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="DescriptionInput" Margin="5"/>

        <!-- Due Date -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Due Date:" VerticalAlignment="Center" Margin="5"/>
        <DatePicker Grid.Row="2" Grid.Column="1" x:Name="DeadlineInput" Margin="5"/>

        <!-- Priority -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Priority:" VerticalAlignment="Center" Margin="5"/>
        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="PriorityInput" Margin="5">
            <!-- You can populate this in code-behind if preferred -->
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="8"/>
            <ComboBoxItem Content="9"/>
            <ComboBoxItem Content="10"/>
        </ComboBox>
        
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Completion:" VerticalAlignment="Center" Margin="5"/>
        <CheckBox Grid.Row="4" Grid.Column="1" x:Name="CompletionInput" Content="Is This Assignment Complete?" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <!-- Submit Button -->
        <Button Grid.Row="5" Grid.Column="1" Content="Submit" Click="Submit_Click" Margin="5" HorizontalAlignment="Right"/>
    </Grid>
</Window>
